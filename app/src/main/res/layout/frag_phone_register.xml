<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wuqian.myedx.activity.LoginActivity">

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@mipmap/ic_phone"
        android:drawablePadding="8dp"
        android:singleLine="true"
        android:inputType="phone"
        android:hint="输入手机号码，仅支持中国"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@mipmap/ic_password"
        android:drawablePadding="8dp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:hint="请输入密码"/>

    <EditText
        android:id="@+id/et_vericode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@mipmap/ic_password"
        android:drawablePadding="8dp"
        android:singleLine="true"
        android:inputType="phone"
        android:hint="填写验证码"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_vericode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="36dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/btn_login_sel"
            android:text="获取验证码" />
        <Button
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="36dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/btn_login_sel"
            android:text="立即注册" />
    </LinearLayout>
</LinearLayout>
</ScrollView>